icon: public/icon.png
micros:
  - name: app
    src: .
    engine: static
    serve: dist
    primary: true
    commands:
      - NODE_OPTIONS="--max-old-space-size=1024" npm run build
    dev: npm run dev
    public_routes:
      - "/shared/*"
      - "/assets/*"

  - name: backend
    src: ./backend
    path: /api
    engine: nodejs16
    dev: npm run dev
    commands:
      - npm run build
    run: node lib/index.js
    include:
      - lib
      - node_modules
      - package.json
    public_routes:
      - "/public/*"
    provide_actions: true
    presets:
      env:
        - name: SPACE_ACCESS_TOKEN
          description: Space Access Token used for optional interoperability features
